{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "description": "Tick chart",
    "config": {
      "background": "#FFFFFF",
      "axisX": {
        "domain": true,
        "labels": true,
        "grid": false,
        "labelFontSize": 8,
        "tickColor": "#000000",
        "tickSize": 2,
        "titleFontSize": 12
      },
      "axisY": {"domain": false, "labels": false, "grid": false, "ticks": false},
      "view": {"stroke": "transparent"},
      "tick": {"thickness": 0.65, "bandSize": 40}
    },
    "data": {
      "url": "https://raw.githubusercontent.com/nychealth/coronavirus-data/master/latest/last7days-by-modzcta.csv"
    },
    "vconcat": [
  
  
  
  
      {
          "layer": [
      {
        "width": "container",
        "height": 450,
        "data": {
          "url": "https://raw.githubusercontent.com/nychealth/covid-maps/main/pp/MODZCTA_2010_RI99999_WGS1984_1_topoms.json",
          "format": {
            "type": "topojson",
            "feature": "collection"
          }
        },
        "mark": {
          "type": "geoshape",
          "stroke": "#ffffff",
          "fill": "lightgray"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/nychealth/covid-maps/main/pp/MODZCTA_2010_RI99999_WGS1984_1_topoms.json",
          "format": {
            "type": "topojson",
            "feature": "collection"
          }
        },
        "transform": [
          {
            "lookup": "properties.MODZCTA",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/nychealth/coronavirus-data/master/latest/last7days-by-modzcta.csv"
              },
              "key": "modzcta",
              "fields": [
                "modzcta",
                "modzcta_name",
                "percentpositivity_7day",
                "people_tested",
                "people_positive",
                "median_daily_test_rate",
                "adequately_tested",
                "daterange"
              ]
            }
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "#FFFFFF"
        },
        "encoding": {
          "color": {
            "bin": false,
            "field": "percentpositivity_7day",
            "type": "quantitative",
            "scale": {
              "scheme": {
                "name": "orangered",
                "extent": [
                  0.1,
                  1.5
                ]
              }
            },
            "legend": {
              "title": "7-day percent positive",
              "titleFontSize": 10,
              "orient": "top-left",
              "gradientLength": 150
            }
          },
          "strokeWidth": {
            "value": 0.5
          },
          "tooltip": [
            {
              "field": "properties.label",
              "type": "nominal",
              "title": "ZIP code"
            },
            {
              "field": "modzcta_name",
              "type": "nominal",
              "title": "Neighborhood"
            },
            {
              "field": "percentpositivity_7day",
              "type": "quantitative",
              "title": "Percent positive"
            }
          ]
        }
      }
    ]
      },
  
  
      {
        "width": "container",
        "height": 75,
        "mark": {"type": "bar", "tooltip": true},
        "encoding": {
          "y": {"field": "percentpositivity_7day", "type": "quantitative", "title": null},
          "tooltip": [
            {"field": "label", "title": "ZIP"},
            {"field": "modzcta_name", "title": "Neighborhood"},
            {
              "field": "percentpositivity_7day",
              "type": "quantitative",
              "title": "Percent positive (last 7 days)"
            }
          ],
          "x": {"field": "modzcta", "sort": {"field": "percentpositivity_7day"}, "axis": null},
                  "color": {
            "bin": false,
            "field": "percentpositivity_7day",
            "type": "quantitative",
            "scale": {
              "scheme": {
                "name": "orangered",
                "extent": [
                  0.1,
                  1.5
                ]
              }
            }
          }
        }
      }
    ]
  
  }